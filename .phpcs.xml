<?xml version="1.0"?>
<ruleset>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
        <exclude name="MediaWiki.Classes.UnsortedUseStatements.UnsortedUse" />
        <exclude name="MediaWiki.Commenting.MissingCovers.MissingCovers" />
        <exclude name="MediaWiki.PHPUnit.SetMethods.SetMethods" />
        <exclude name="Generic.Arrays.DisallowLongArraySyntax.Found" />
        <exclude name="MediaWiki.Commenting.FunctionComment.MissingDocumentationPrivate" />
        <exclude name="MediaWiki.Commenting.FunctionComment.DefaultNullTypeParam" />
        <exclude name="MediaWiki.Commenting.FunctionComment.NoParamType" />
        <exclude name="Generic.WhiteSpace.DisallowSpaceIndent.SpacesUsed" />
        <exclude name="MediaWiki.Commenting.PropertyDocumentation.WrongStyle" />
        <exclude name="Generic.WhiteSpace.ScopeIndent.Incorrect" />
        <exclude name="Generic.PHP.ForbiddenFunctions.FoundWithAlternative" />
        <exclude name="MediaWiki.Usage.ForbiddenFunctions.sizeof" />
        <exclude name="MediaWiki.Commenting.FunctionComment.ParamNameNoMatch" />
        <exclude name="MediaWiki.Commenting.FunctionComment.MissingReturn" />
	</rule>
	<file>.</file>
	<exclude-pattern>/(vendor|conf)/</exclude-pattern>
	<exclude-pattern type="relative">extensions/*</exclude-pattern>
	<arg name="extensions" value="php"/>
	<arg name="encoding" value="UTF-8"/>
</ruleset>
